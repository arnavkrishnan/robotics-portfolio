---
// Props allow each page to pass its <title>
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Header / Navbar -->
    <header>
      <nav>
        <a href="/">Home</a> 
        | <a href="/about">About Me</a> 
        | <a href="/projects">Projects</a> 
      </nav>
      <hr />
    </header>

    <!-- Page content -->
    <main>
      <slot /> <!-- This is where the page content goes -->
    </main>

    <!-- Footer -->
    <footer>
      <hr />
      <p>&copy; 2025 Arnav Krishnan</p>
    </footer>
  </body>
</html>