---
const { base, section, previous, next } = Astro.props;
// section is either 'projects' or 'certifications'
---
<nav class="pagination">
  {previous ? (
    <a href={`${base}/${section}/${previous}`}>← Previous</a>
  ) : (
    <span class="disabled">← Previous</span>
  )}
  
  <a href={`${base}/${section}`}>List</a>
  
  {next ? (
    <a href={`${base}/${section}/${next}`}>Next →</a>
  ) : (
    <span class="disabled">Next →</span>
  )}
</nav>
<hr />

<style>
  .pagination {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
  }
  
  .pagination a {
    color: inherit;
    text-decoration: none;
  }
  
  .pagination a:hover {
    text-decoration: underline;
  }
  
  .pagination .disabled {
    color: #999;
    cursor: not-allowed;
  }
</style>