---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = '/robotics-portfolio';
---

<BaseLayout title="About Me" base={base}>
  <h1>About Me</h1>
  <p>I'm a sophomore at Los Altos High School. I'm interested in Engineering and Physics, and enjoy sailing.</p>
  <p>Feel free to contact me via the methods below:</p>

  <section>
    <h2>Contact</h2>
    <ul style="list-style: none; padding: 0;">
      <li style="margin-bottom: 0.5rem;">
        Email: 
        <a href="mailto:arnav.s.krishnan@gmail.com">arnav.s.krishnan@gmail.com</a>
        <button class="copy-btn" data-copy="arnav.s.krishnan@gmail.com">Copy</button>
      </li>
      <li style="margin-bottom: 0.5rem;">
        Phone: 
        <span>6509779050</span>
        <button class="copy-btn" data-copy="6509779050">Copy</button>
      </li>
      <li>
        GitHub: 
        <a href="https://github.com/arnavkrishnan" target="_blank" rel="noopener">github.com/arnavkrishnan</a>
      </li>
    </ul>
  </section>

  <script type="module">
    // Select all copy buttons
    const buttons = document.querySelectorAll('.copy-btn');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const text = btn.dataset.copy;

        navigator.clipboard.writeText(text).then(() => {
          const original = btn.textContent;

          // Fade to thumbs-up
          btn.textContent = 'ðŸ‘';
          btn.style.opacity = 0;
          btn.style.transition = 'opacity 0.2s';
          requestAnimationFrame(() => btn.style.opacity = 1);

          // Revert after 1 second with fade
          setTimeout(() => {
            btn.style.opacity = 0;
            setTimeout(() => {
              btn.textContent = original;
              btn.style.opacity = 1;
            }, 200);
          }, 1000);
        });
      });
    });
  </script>
</BaseLayout>
